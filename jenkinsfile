pipeline {
    agent {
        label 'golang118'
    }
    stages {
        stage('Checkout') {            
            steps {
                git branch: 'main', credentialsId: 'github_credentials', url: 'https://github.com/mustafaerbay/cer.git'
            }
        }
        stage('Example Build') {            
            steps {
                sh 'export GITHUB_TOKEN=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'
                sh 'go build -ldflags="-X 'cer/config.BuildVersion=1.0.0' -X 'cer/config.BuildTime=$(date)'"'
                sh 'ls -all'
                sh 'chmod +x cer*'
            }
        }
        stage('Example Test') {            
            steps {
                echo 'go test'
                sh './cer version'
            }
        }
    }
}
